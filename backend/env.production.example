# 生產環境配置範例
# 📋 使用說明：
# 1. 複製此檔案為 .env
# 2. 填入實際的生產環境值
# 3. 確保 .env 檔案在 .gitignore 中

# 伺服器配置
PORT=8080
GIN_MODE=release

# 🔒 安全的 SQL Server 連線配置
DB_HOST=140.131.114.241
DB_PORT=1433
DB_USER=MindHelp114
# ⚠️  請使用環境變數或 Azure Key Vault 管理密碼
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DB_NAME=114-MindHelp

# 🛡️  啟用 SSL/TLS 加密
ENABLE_TLS=true
TLS_CERT_FILE=/path/to/your/certificate.crt
TLS_KEY_FILE=/path/to/your/private.key
REQUIRE_CLIENT_CERT=false

# 🔐 JWT 配置
JWT_SECRET=your-production-super-secret-jwt-key-256-bit-minimum
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# 🌐 OpenRouter API 配置
OPENROUTER_API_KEY=your-production-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# 🚪 CORS 配置
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 📊 日誌配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/mindhelp/app.log
ENABLE_STRUCTURED_LOGGING=true

# 📈 監控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30s

# 🏥 安全的 SQL Server 連線字串：
# server=host;user id=user;password=pass;port=1433;database=db;encrypt=true;TrustServerCertificate=false;
